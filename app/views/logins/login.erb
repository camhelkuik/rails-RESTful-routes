<% if @errors %>
  <%= @errors %>
<% end %>

<h2 class= centered>Please fill in the information to sign up:</h2>

<%= form_tag("/save_sign_up", method: "post") do %>
  <input type="text" placeholder="email" name="user[email]">
  <input type="password" placeholder="password" name="user[password]">
  
  <input type="submit">
  
  <% end %>


<h2 class= centered>Login information:</h2>

<%= form_tag("/verify_login", method: "post") do %>
  <input type="text" placeholder="email" name="user[email]">
  <input type="password" placeholder="password" name="user[password]">
  
  <input type="submit">
  
  <% end %>

